@model WMS.Models.Products

@{
    ViewBag.Title = "新增產品";
}

    <body style="background-color: PowderBlue; ">
    </body>

<h2>新增產品</h2>
<div>@Html.ActionLink("返回", "Index")</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">產品編號</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.PID, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">產品名稱</label>            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">商品類別編號</label>
            <div class="col-md-10">
                <select id="CID" name="CID" class="form-control">
                    <option value="01">食品</option>
                    <option value="02">飲料</option>
                    <option value="03">文具</option>
                    <option value="04">生活用品</option>
                </select>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">產品描述</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">產品規格</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Adescription, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Adescription, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">產品價格</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">產品總庫存</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Qty, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Qty, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">安全庫存量</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.SafeQty, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SafeQty, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">建檔日期</label>
            <div class="col-md-10">
                @{
                    DateTime today = DateTime.Today;
                    string formattedToday = today.ToString("yyyy-MM-dd");
                }
                <input type="date" class="form-control" id="bDate" name="bDate" value="@formattedToday" required="required" />
                @Html.ValidationMessage("bDate", "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="確認" class="btn btn-default" />
            </div>
        </div>
    </div>
}
