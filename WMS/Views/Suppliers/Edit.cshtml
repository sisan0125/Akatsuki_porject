@model WMS.Models.Suppliers

@{
    ViewBag.Title = "供應商名單修改";
}

    <body style="background-color: PowderBlue; ">
    </body>

<h2>供應商名單修改</h2>
<div>@Html.ActionLink("返回供應商主頁", "Index")</div>

