<!DOCTYPE html>
<html lang="zh-Hant">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap/dist/css/bootstrap.min.css">
    <title>目錄</title>

    <style>
        body {
            font-family: '微軟正黑體', sans-serif;
            margin: 0;
            padding: 0;
            background: url('https://inventorsoft.co/assets/images/blog/warehouse-management-requirements/Main.jpg') no-repeat center center fixed;
            background-size: cover;
            color: #ffffff;
        }

        header {
            background-color: rgba(52, 58, 64, 0.8);
            padding: 10px 0;
            text-align: center;
        }

        h2 {
            margin-bottom: 0;
        }

        .navbar {
            background-color: rgba(0, 123, 255, 0.8);
            display: flex;
            justify-content: space-around;
            align-items: center;
            padding: 10px 0;
            position: fixed;
            width: 100%;
            top: 0;
        }

            .navbar a {
                text-decoration: none;
                color: #ffffff;
                font-weight: bold;
                font-size: 18px;
                margin-right: 20px;
                transition: color 0.3s;
            }

                .navbar a:hover {
                    color: #ffc107;
                }
    </style>
</head>
<body>

    <<div class="navbar navbar-inverse navbar-fixed-top">
         <div class="container">
             @Html.ActionLink("客戶", "NavigateToCustomers", new { @class = "navbar-item" })
             @Html.ActionLink("商品", "NavigateToProducts", new { @class = "navbar-item" })
             @Html.ActionLink("儲位商品", "NavigateToStorageProduct", new { @class = "navbar-item" })
             @Html.ActionLink("供應商", "NavigateToSuppliers", new { @class = "navbar-item" })
             @Html.ActionLink("訂單", "NavigateToSOM", new { @class = "navbar-item" })
             @Html.ActionLink("採購單", "NavigateToPOM", new { @class = "navbar-item" })
         </div>
    </div>

    <header>
        <h2>目錄</h2>
    </header>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap/dist/js/bootstrap.min.js"></script>
</body>
</html>
